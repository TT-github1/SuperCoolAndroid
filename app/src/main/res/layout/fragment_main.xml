<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eeeeee">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/bg_logo"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_search_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/bg_search_bar"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/iv_logo"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"/>

    <GridLayout
        android:id="@+id/gl_function_container"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/testColor3"
        app:layout_constraintStart_toStartOf="@id/iv_logo"
        app:layout_constraintTop_toBottomOf="@+id/iv_search_bar">

    </GridLayout>

    <LinearLayout
        android:id="@+id/ll_slideshow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/testColor4"
        app:layout_constraintStart_toStartOf="@+id/iv_logo"
        app:layout_constraintTop_toBottomOf="@+id/gl_function_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>